<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="QuizController" spacing="10" alignment="CENTER">
    <Label fx:id="questionNumberLabel" style="-fx-font-weight: bold;"/>
    <ProgressIndicator fx:id="progressIndicator" progress="0.0"/>
    
    <Label fx:id="questionLabel" wrapText="true" style="-fx-font-size: 16px;" maxWidth="400"/>
    
    <VBox spacing="5" alignment="TOP_LEFT">
        <RadioButton fx:id="option1" text="Option 1"/>
        <RadioButton fx:id="option2" text="Option 2"/>
        <RadioButton fx:id="option3" text="Option 3"/>
        <RadioButton fx:id="option4" text="Option 4"/>
    </VBox>
    
    <Button fx:id="nextButton" text="Next" onAction="#handleNextButton" defaultButton="true"/>
</VBox>