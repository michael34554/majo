<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ResultController" spacing="15" alignment="CENTER">
    <Label text="Quiz Results" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    
    <Label fx:id="scoreLabel" style="-fx-font-size: 16px;"/>
    <Label fx:id="percentageLabel" style="-fx-font-size: 16px;"/>
    <ProgressBar fx:id="progressBar" prefWidth="200"/>
    
    <Label fx:id="messageLabel" wrapText="true" maxWidth="300" style="-fx-font-size: 14px; -fx-text-alignment: center;"/>
    
    <Button fx:id="closeButton" text="Close" onAction="#handleCloseButton"/>
</VBox>